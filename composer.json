{
  "name": "company/cake-scheduler",
  "description": "CLI utility for scheduling birthday cakes for employees.",
  "type": "project",
  "minimum-stability": "dev",
  "require": {
    "php": "^8.2"
  },
  "require-dev": {
    "pestphp/pest": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php bin/cake-scheduler data/employees.txt output/cakes.csv --year=2025",
    "test": "vendor/bin/pest"
  },
  "bin": [
    "bin/cake-scheduler"
  ],
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
